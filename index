<body>
    <h1>Doctor Waiting Times</h1>
    <div id="loading">Loading data...</div>
    <div id="error" style="display: none;"></div>
    <table id="waiting-times-table">
        <thead>
            <tr>
                <th>Doctor</th>
                <th>Status</th>
                <th>Wait (minutes)</th>
            </tr>
        </thead>
        <tbody id="table-body"></tbody>
    </table>

    <script>
        // Your Google Sheet's published CSV URL
        const csvUrl = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vR6isKQeI8cgW7iaTV4KfnUugomy_4cHq-RcpqTDj1haz0uJFqIYi08khnhm5JuudGXxD4hh117g0GR/pub?output=csv';

        async function fetchData() {
            try {
                const response = await fetch(csvUrl);
                if (!response.ok) throw new Error('Failed to fetch data from Google Sheet');
                const csvText = await response.text();

                // Parse CSV, handling quoted fields and commas
                const rows = csvText.split('\n').map(row => {
                    const cols = [];
                    let current = '';
                    let inQuotes = false;
                    for (let i = 0; i < row.length; i++) {
                        if (row[i] === '"') {
                            inQuotes = !inQuotes;
                        } else if (row[i] === ',' && !inQuotes) {
                            cols.push(current.trim());
                            current = '';
                        } else {
                            current += row[i];
                        }
                    }
                    cols.push(current.trim());
                    return cols;
                });

                // Populate the table, skipping the header row
                const tableBody = document.getElementById('table-body');
                tableBody.innerHTML = ''; // Clear loading message

                for (let i = 1; i < rows.length; i++) {
                    const [doctor, status, wait] = rows[i];
                    if (doctor && status && wait) {
                        const normalizedStatus = status.toLowerCase();
                        if (['red', 'green', 'yellow'].includes(normalizedStatus)) {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td>${doctor}</td>
                                <td><span class="status-${normalizedStatus}">${status}</span></td>
                                <td>${wait}</td>
                            `;
                            tableBody.appendChild(row);
                        }
                    }
                }
                document.getElementById('loading').style.display = 'none';
            } catch (error) {
                document.getElementById('loading').style.display = 'none';
                const errorDiv = document.getElementById('error');
                errorDiv.textContent = 'Error loading data: ' + error.message;
                errorDiv.style.display = 'block';
            }
        }

        // Fetch data when the page loads
        window.onload = fetchData;
    </script>
</body>
</html>
